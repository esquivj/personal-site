---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  canonicalPath?: string;
}

const SITE_URL = 'https://juanesquivel.xyz';
const DEFAULT_IMAGE = '/images/og-image.png';

const {
  title = "Juan Esquivel — Crypto Marketer & Storyteller",
  description = "Juan Esquivel is a crypto marketer based in Lisbon, building brand, narrative, and storytelling at StableLab. Thoughts on marketing, brand strategy, and building in web3.",
  image = DEFAULT_IMAGE,
  type = "website",
  publishedTime,
  canonicalPath
} = Astro.props;

const canonicalURL = canonicalPath ? `${SITE_URL}${canonicalPath}` : new URL(Astro.url.pathname, SITE_URL).toString();
const ogImageURL = image.startsWith('http') ? image : `${SITE_URL}${image}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Juan Esquivel" />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@0xCadena" />
    <meta name="twitter:creator" content="@0xCadena" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <title>{title}</title>

    <!-- Structured Data Slot -->
    <slot name="head" />

    <!-- Fonts -->
    <style>
      @font-face {
        font-family: 'iA Writer Quattro';
        src: url('/fonts/iAWriterQuattroS-Regular.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: 'iA Writer Quattro';
        src: url('/fonts/iAWriterQuattroS-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: 'iA Writer Quattro';
        src: url('/fonts/iAWriterQuattroS-Italic.woff2') format('woff2');
        font-weight: 400;
        font-style: italic;
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <slot />
      <footer class="footer">
        <p>© 2025 Juan Esquivel</p>
      </footer>
    </div>
    <script>
      import { inject } from '@vercel/analytics';
      inject();
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'iA Writer Quattro', 'SF Mono', Monaco, 'Cascadia Code', monospace;
    background-color: #0a0a0a;
    color: #e5e5e5;
    font-size: 16px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    scrollbar-width: thin;
    scrollbar-color: #333 transparent;
  }

  /* Webkit scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #444;
  }

  body {
    min-height: 100vh;
    position: relative;
  }

  /* Subtle radial gradient for depth */
  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background: radial-gradient(
      ellipse 80% 50% at 50% -20%,
      rgba(120, 119, 198, 0.08),
      transparent
    );
    pointer-events: none;
    z-index: -1;
  }

  /* Film grain overlay - high res */
  body::after {
    content: '';
    position: fixed;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 256px 256px;
    opacity: 0.035;
    pointer-events: none;
    z-index: 1000;
    mix-blend-mode: overlay;
  }

  /* Page load animation base */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered reveal for sections */
  .container > *:not(footer) {
    animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
  }

  .container > *:nth-child(1) { animation-delay: 0ms; }
  .container > *:nth-child(2) { animation-delay: 60ms; }
  .container > *:nth-child(3) { animation-delay: 120ms; }
  .container > *:nth-child(4) { animation-delay: 180ms; }
  .container > *:nth-child(5) { animation-delay: 240ms; }
  .container > *:nth-child(6) { animation-delay: 300ms; }
  .container > *:nth-child(7) { animation-delay: 360ms; }
  .container > *:nth-child(8) { animation-delay: 420ms; }

  .container {
    max-width: 640px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  a {
    color: #e5e5e5;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: #ffffff;
  }

  /* Typography */
  h1, h2, h3 {
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  /* Muted text */
  .text-muted {
    color: #d4d4d4;
  }

  .text-secondary {
    color: #c4c4c4;
  }

  /* Nav link underline animation */
  .nav-link {
    position: relative;
  }

  .nav-link:hover {
    color: #FF6B00;
  }

  .nav-link.active {
    color: #FF6B00;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Section spacing */
  section {
    margin-bottom: 3rem;
  }

  section h2 {
    font-size: 0.8125rem;
    font-weight: 700;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #1a1a1a;
  }

  .footer p {
    font-size: 0.8125rem;
    color: #404040;
  }
</style>
