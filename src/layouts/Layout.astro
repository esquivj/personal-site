---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Juan Esquivel",
  description = "Lore maximalist. Leading marketing at a crypto startup. Building brand, narrative, and lore."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <title>{title}</title>

    <!-- Fonts -->
    <style>
      @font-face {
        font-family: 'iA Writer Quattro';
        src: url('/fonts/iAWriterQuattroS-Regular.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: 'iA Writer Quattro';
        src: url('/fonts/iAWriterQuattroS-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: 'iA Writer Quattro';
        src: url('/fonts/iAWriterQuattroS-Italic.woff2') format('woff2');
        font-weight: 400;
        font-style: italic;
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <div class="glow glow-1"></div>
    <div class="glow glow-2"></div>
    <div class="container">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'iA Writer Quattro', 'SF Mono', Monaco, 'Cascadia Code', monospace;
    background-color: #0a0a0a;
    color: #e5e5e5;
    font-size: 16px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
  }

  /* LA sunset gradient glows */
  .glow {
    position: fixed;
    pointer-events: none;
    z-index: -1;
    filter: blur(80px);
  }

  .glow-1 {
    top: -30%;
    right: -20%;
    width: 70%;
    height: 70%;
    background: radial-gradient(circle, rgba(56, 189, 248, 0.12) 0%, rgba(14, 165, 233, 0.06) 50%, transparent 80%);
  }

  .glow-2 {
    bottom: -40%;
    left: -30%;
    width: 80%;
    height: 80%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.10) 0%, rgba(139, 92, 246, 0.05) 50%, transparent 80%);
  }

  .container {
    max-width: 640px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  a {
    color: #e5e5e5;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: #ffffff;
  }

  /* Typography */
  h1, h2, h3 {
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  /* Muted text */
  .text-muted {
    color: #999999;
  }

  .text-secondary {
    color: #c4c4c4;
  }

  /* Section spacing */
  section {
    margin-bottom: 3rem;
  }

  section h2 {
    font-size: 0.8125rem;
    font-weight: 700;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }
</style>
