---
import Layout from '../layouts/Layout.astro';
import { travelStats } from '../data/travels';

const pageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Juan Esquivel's Travel Stats",
  "url": "https://juanesquivel.xyz/travels",
  "description": "Flight statistics and travel data from Juan Esquivel's journeys around the world.",
  "author": {
    "@type": "Person",
    "name": "Juan Esquivel",
    "url": "https://juanesquivel.xyz"
  }
};

// Format distance with commas
const formatNumber = (n: number) => n.toLocaleString('en-US');

// Calculate flight hours (rough estimate: 800 km/h average)
const flightHours = Math.round(travelStats.totalDistance / 800);
---

<Layout
  title="Travels - Juan Esquivel"
  description="Flight statistics and travel data from Juan Esquivel's journeys around the world."
  canonicalPath="/travels"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>

  <nav class="nav">
    <button class="nav-toggle" aria-label="Toggle menu">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"/>
        <line x1="3" y1="12" x2="21" y2="12"/>
        <line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
    </button>
    <div class="nav-links">
      <a href="/" class="nav-link">Home</a>
      <a href="/writing" class="nav-link">Writing</a>
      <a href="/stack" class="nav-link">Stack</a>
      <a href="/speaking" class="nav-link">Speaking</a>
      <a href="/now" class="nav-link">Now</a>
      <a href="/travels" class="nav-link active">Travels</a>
      <a href="/about" class="nav-link">About</a>
    </div>
  </nav>

  <header class="page-header">
    <h1>Travels</h1>
    <p class="subtitle">Flight stats from my journeys around the world.</p>
  </header>

  <section class="hero-stat">
    <div class="hero-number">{formatNumber(travelStats.totalDistance)}</div>
    <div class="hero-label">kilometers flown</div>
  </section>

  <section class="supporting-stats">
    <div class="supporting-stat">
      <span class="supporting-value">{travelStats.totalFlights}</span>
      <span class="supporting-label">flights</span>
    </div>
    <span class="stat-divider">·</span>
    <div class="supporting-stat">
      <span class="supporting-value">{flightHours}</span>
      <span class="supporting-label">hours</span>
    </div>
    <span class="stat-divider">·</span>
    <div class="supporting-stat">
      <span class="supporting-value">{travelStats.totalCountries}</span>
      <span class="supporting-label">countries</span>
    </div>
  </section>

  <section class="secondary-stats">
    <div class="secondary-stat">
      <span class="secondary-value">{travelStats.totalAirports}</span>
      <span class="secondary-label">Airports</span>
    </div>
    <div class="secondary-stat">
      <span class="secondary-value">{travelStats.totalAirlines}</span>
      <span class="secondary-label">Airlines</span>
    </div>
    <div class="secondary-stat">
      <span class="secondary-value">{travelStats.totalAircraftTypes}</span>
      <span class="secondary-label">Aircraft types</span>
    </div>
    <div class="secondary-stat">
      <span class="secondary-value">{travelStats.firstFlight.slice(0, 4)}</span>
      <span class="secondary-label">First tracked</span>
    </div>
  </section>

  <section>
    <h2>Countries</h2>
    <div class="countries-grid">
      {travelStats.countries.map(country => (
        <span class="country-tag">{country}</span>
      ))}
    </div>
  </section>

  <p class="last-updated">Stats from Flighty. Last updated: {new Date(travelStats.lastUpdated).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}</p>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    color: #525252;
    cursor: pointer;
    padding: 0.5rem;
    margin: -0.5rem;
    transition: color 0.15s ease;
  }

  .nav-toggle:hover {
    color: #c4c4c4;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    font-size: 0.875rem;
    color: #525252;
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: #c4c4c4;
  }

  .nav-link.active {
    color: #e5e5e5;
  }

  @media (max-width: 640px) {
    .nav {
      flex-direction: column;
      align-items: flex-start;
    }

    .nav-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      padding-top: 1rem;
    }

    .nav-links.open {
      display: flex;
    }
  }

  .page-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #999999;
    font-size: 1rem;
  }

  /* Hero Stat */
  .hero-stat {
    margin-bottom: 1.5rem;
  }

  .hero-number {
    font-size: 4rem;
    font-weight: 700;
    color: #e5e5e5;
    letter-spacing: -0.03em;
    line-height: 1;
  }

  .hero-label {
    font-size: 1rem;
    color: #525252;
    margin-top: 0.5rem;
  }

  /* Supporting Stats */
  .supporting-stats {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .supporting-stat {
    display: flex;
    align-items: baseline;
    gap: 0.375rem;
  }

  .supporting-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #c4c4c4;
  }

  .supporting-label {
    font-size: 0.875rem;
    color: #525252;
  }

  .stat-divider {
    color: #333;
    font-size: 1.25rem;
  }

  @media (max-width: 480px) {
    .hero-number {
      font-size: 3rem;
    }
  }

  /* Sections */
  section {
    margin-bottom: 2.5rem;
  }

  section h2 {
    font-size: 0.875rem;
    font-weight: 500;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  /* Countries Grid */
  .countries-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .country-tag {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid #1a1a1a;
    border-radius: 6px;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    color: #c4c4c4;
  }

  @media (min-width: 480px) {
    .countries-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }


  /* Secondary Stats */
  .secondary-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .secondary-stat {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .secondary-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: #c4c4c4;
  }

  .secondary-label {
    font-size: 0.75rem;
    color: #525252;
  }

  .last-updated {
    color: #404040;
    font-size: 0.8125rem;
    font-style: italic;
    margin-top: 3rem;
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .secondary-stats {
      flex-wrap: wrap;
      gap: 1.5rem;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav-toggle');
  const navLinks = document.querySelector('.nav-links');
  toggle?.addEventListener('click', () => {
    navLinks?.classList.toggle('open');
  });
</script>
