<style>
  .nav {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #525252;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #e5e5e5;
  }

  .back-link svg {
    transition: transform 0.2s ease;
  }

  .back-link:hover svg {
    transform: translateX(-2px);
  }

  .post {
    max-width: 100%;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-cover {
    margin: 0 0 2rem 0;
    border-radius: 8px;
    overflow: hidden;
    background: #111;
  }

  .post-cover img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .post-title {
    font-size: 2rem;
    font-weight: 700;
    color: #e5e5e5;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin-bottom: 0.75rem;
  }

  .post-subtitle {
    font-size: 1.125rem;
    color: #999999;
    font-style: italic;
    margin-bottom: 1rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #525252;
  }

  .separator {
    color: #333;
  }

  .post-content {
    color: #c4c4c4;
    font-size: 1rem;
    line-height: 1.75;
  }

  .post-content p {
    margin-bottom: 1.5rem;
  }

  .post-content h2 {
    font-size: 1.375rem;
    font-weight: 700;
    color: #e5e5e5;
    margin-top: 3rem;
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
  }

  .post-content h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: #e5e5e5;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .post-content blockquote {
    border-left: 2px solid #404040;
    padding: 1rem 0 1rem 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #a3a3a3;
    background: linear-gradient(to right, rgba(255,255,255,0.02), transparent);
    border-radius: 0 4px 4px 0;
  }

  .post-content ul {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .post-content li {
    margin-bottom: 0.5rem;
    color: #c4c4c4;
  }

  .post-content li::marker {
    color: #525252;
  }

  .post-content hr {
    border: none;
    border-top: 1px solid #1a1a1a;
    margin: 3rem 0;
  }

  .post-content strong {
    color: #e5e5e5;
    font-weight: 700;
  }

  .post-content a {
    color: #e5e5e5;
    text-decoration: underline;
    text-decoration-color: #525252;
    text-underline-offset: 2px;
    transition: text-decoration-color 0.2s ease;
  }

  .post-content a:hover {
    text-decoration-color: #e5e5e5;
  }

  .post-content code {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 0.875em;
    background: rgba(255,255,255,0.06);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    color: #e5e5e5;
  }

  .post-content pre {
    background: #111;
    border: 1px solid #1a1a1a;
    border-radius: 8px;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content pre code {
    background: none;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .back-link:focus-visible {
    outline: 2px solid #525252;
    outline-offset: 2px;
    border-radius: 2px;
  }

  @media (max-width: 640px) {
    .post-title {
      font-size: 1.625rem;
    }

    .post-subtitle {
      font-size: 1rem;
    }
  }
</style>
