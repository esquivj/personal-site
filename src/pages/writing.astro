---
import Layout from '../layouts/Layout.astro';

const pageSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Writing by Juan Esquivel",
  "url": "https://juanesquivel.xyz/writing",
  "description": "Essays and thoughts on storytelling, crypto marketing, building brands, and working at startups.",
  "author": {
    "@type": "Person",
    "name": "Juan Esquivel",
    "url": "https://juanesquivel.xyz"
  }
};
---

<Layout
  title="Writing - Juan Esquivel"
  description="Essays and thoughts on storytelling, crypto marketing, building brands, and working at startups by Juan Esquivel."
  canonicalPath="/writing"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>
  <nav class="nav">
    <button class="nav-toggle" aria-label="Toggle menu">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"/>
        <line x1="3" y1="12" x2="21" y2="12"/>
        <line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
    </button>
    <div class="nav-links">
      <a href="/" class="nav-link">Home</a>
      <a href="/writing" class="nav-link active">Writing</a>
      <a href="/stack" class="nav-link">Stack</a>
      <a href="/speaking" class="nav-link">Speaking</a>
      <a href="/now" class="nav-link">Now</a>
      <a href="/about" class="nav-link">About</a>
    </div>
  </nav>

  <header class="page-header">
    <h1>Writing</h1>
    <p class="subtitle">Thoughts on storytelling, crypto marketing, and building brands.</p>
  </header>

  <section>
    <p class="empty-state">Coming soon.</p>
  </section>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    color: #525252;
    cursor: pointer;
    padding: 0.5rem;
    margin: -0.5rem;
    transition: color 0.15s ease;
  }

  .nav-toggle:hover {
    color: #c4c4c4;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    font-size: 0.875rem;
    color: #525252;
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: #c4c4c4;
  }

  .nav-link.active {
    color: #e5e5e5;
  }

  @media (max-width: 640px) {
    .nav {
      flex-direction: column;
      align-items: flex-start;
    }

    .nav-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      padding-top: 1rem;
    }

    .nav-links.open {
      display: flex;
    }
  }

  .page-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #999999;
    font-size: 1rem;
  }

  .empty-state {
    color: #525252;
  }
</style>

<script>
  const toggle = document.querySelector('.nav-toggle');
  const navLinks = document.querySelector('.nav-links');
  toggle?.addEventListener('click', () => {
    navLinks?.classList.toggle('open');
  });
</script>
