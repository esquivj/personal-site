];
---

<Layout
  title="Writing â€” Crypto Marketing Essays"
  description="Essays on crypto marketing, storytelling, and brand strategy from Juan Esquivel. Notes on building narratives in web3, startups, and the craft of marketing."
  canonicalPath="/writing"
  preloadImages={["/images/building-way-in-cover.jpg", "/images/crypto-native-cover.jpg", "/images/podcast-tips-cover.jpg"]}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>
  <Nav active="writing" />

  <header class="page-header">
    <h1>Writing</h1>
    <p class="subtitle">Thoughts on crypto marketing, storytelling, building brands and startups.</p>
  </header>

  <section class="posts">
    {posts.map((post) => (
      <a href={`/writing/${post.slug}`} class="post-card">
        <div class="post-card-cover">
          <img src={post.cover} alt={post.title} width="640" height="360" loading="lazy" decoding="async" />
        </div>
        <div class="post-card-content">
          <h2 class="post-card-title">{post.title}</h2>
          <p class="post-card-subtitle">{post.subtitle}</p>
          <time class="post-card-date">{post.date}</time>
        </div>
      </a>
    ))}
  </section>
</Layout>

<style>

  .page-header {
    margin-bottom: 2.5rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #999999;
    font-size: 1rem;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    display: block;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .post-card:hover {
    transform: translateY(-2px);
  }

  .post-card:focus-visible {
    outline: 2px solid #525252;
    outline-offset: 4px;
  }

  .post-card-cover {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #111;
    border-radius: 8px;
  }

  .post-card-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1), filter 0.4s ease;
  }

  .post-card:hover .post-card-cover img {
    transform: scale(1.02);
    filter: brightness(1.05);
  }

  .post-card-content {
    padding: 1rem 0;
  }

  .post-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #e5e5e5;
    line-height: 1.4;
    margin-bottom: 0.375rem;
    text-transform: none;
    letter-spacing: -0.01em;
    transition: color 0.2s ease;
  }

  .post-card:hover .post-card-title {
    color: #fff;
  }

  .post-card-subtitle {
    font-size: 0.9375rem;
    color: #999999;
    line-height: 1.5;
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card-date {
    font-size: 0.8125rem;
    color: #525252;
  }
</style>
