<style>
  .nav {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .nav-link {
    font-size: 0.875rem;
    color: #525252;
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: #c4c4c4;
  }

  .nav-link.active {
    color: #e5e5e5;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #999999;
    font-size: 1rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  section h2 {
    font-size: 0.875rem;
    font-weight: 500;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .stack-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stack-item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.5rem 0.75rem;
    margin: 0 -0.75rem;
    border-radius: 8px;
    transition: background-color 0.15s ease;
  }

  .stack-item:hover {
    background-color: #141414;
  }

  .stack-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    border-radius: 22%;
    object-fit: contain;
    box-shadow:
      inset 0 1px 0 0 rgba(255, 255, 255, 0.1),
      inset 0 0 0 0.5px rgba(255, 255, 255, 0.05),
      0 1px 3px rgba(0, 0, 0, 0.3),
      0 0 0 0.5px rgba(255, 255, 255, 0.03);
  }

  .stack-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    flex-grow: 1;
  }

  .stack-name {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #e5e5e5;
  }

  .stack-desc {
    font-size: 0.8125rem;
    color: #999999;
  }

  .stack-arrow {
    color: #525252;
    font-size: 0.875rem;
    margin-left: auto;
    flex-shrink: 0;
  }

  .stack-item:hover .stack-arrow {
    color: #c4c4c4;
  }

  .coming-soon {
    color: #525252;
    font-size: 0.875rem;
    font-style: italic;
    margin-top: 2rem;
  }
</style>
