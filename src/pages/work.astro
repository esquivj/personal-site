      ...flagshipWork,
      ...servicesWork,
      ...productWork,
      ...salesWork,
      supportingWork.governanceGathering,
      supportingWork.swag,
      behindTheScenes,
    ].reduce((acc, item) => { acc[item.id] = item; return acc; }, {});
