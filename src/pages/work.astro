<style>
  .header {
    margin-bottom: 2rem;
  }

  .back-link {
    font-size: 0.875rem;
    color: #a3a3a3;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: #ffffff;
  }

  h1 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .intro {
    color: #a3a3a3;
    margin-bottom: 3rem;
    font-size: 0.9375rem;
  }

  .section {
    margin-bottom: 4rem;
  }

  .section h2 {
    font-size: 0.8125rem;
    font-weight: 700;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    color: #737373;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 600px) {
    .work-grid {
      grid-template-columns: 1fr;
    }
  }

  .work-item {
    display: block;
    border: 1px solid #262626;
    border-radius: 8px;
    overflow: hidden;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .work-item:hover {
    border-color: #404040;
    transform: translateY(-2px);
  }

  .work-item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: top;
    display: block;
  }

  .work-meta {
    padding: 1rem;
    background: #141414;
  }

  .work-meta h3 {
    font-size: 0.9375rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .work-meta p {
    font-size: 0.8125rem;
    color: #a3a3a3;
  }

  .podcast-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 600px) {
    .podcast-grid {
      grid-template-columns: 1fr;
    }
  }

  .podcast-card {
    position: relative;
    display: block;
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .podcast-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  .podcast-card:hover img {
    transform: scale(1.05);
    filter: brightness(0.7);
  }

  .play-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .play-overlay svg {
    width: 64px;
    height: 64px;
    color: #1DB954;
    filter: drop-shadow(0 2px 8px rgba(0,0,0,0.5));
  }

  .podcast-card:hover .play-overlay {
    opacity: 1;
  }

  .podcast-meta {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1rem 1rem;
    background: linear-gradient(transparent, rgba(0,0,0,0.9));
  }

  .podcast-meta span {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #fff;
  }
</style>
