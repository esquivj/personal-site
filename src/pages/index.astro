          <circle cx="19.4" cy="7.75" r="2.5"/>
          <circle cx="19.4" cy="16.25" r="2.5"/>
          <circle cx="12" cy="20.5" r="2.5"/>
          <circle cx="4.6" cy="16.25" r="2.5"/>
          <circle cx="4.6" cy="7.75" r="2.5"/>
