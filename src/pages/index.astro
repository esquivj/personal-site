  <!-- Projects -->
  <section>
    <h2>Projects</h2>
    <p class="text-muted empty-state">Coming soon</p>
  </section>

  <!-- Writing -->
  <section>
    <h2>Writing</h2>
    <p class="text-muted empty-state">Thoughts on storytelling, crypto marketing, and building brands.</p>
    <a href="/writing" class="section-link">View all &rarr;</a>
  </section>

  <!-- Stack -->
  <section>
    <h2>Stack</h2>
