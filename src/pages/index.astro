</Layout>

<style>
  /* Navigation */
  .nav {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .nav-link {
    font-size: 0.875rem;
    color: #525252;
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: #a3a3a3;
  }

  .nav-link.active {
    color: #e5e5e5;
  }

  /* Header */
  .header {
    margin-bottom: 3rem;
  }

  .header-top {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .avatar {
    width: 64px;
    height: 64px;
    flex-shrink: 0;
    border-radius: 50%;
    overflow: hidden;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .name {
    font-size: 1.25rem;
    font-weight: 500;
    color: #e5e5e5;
  }

  .signature {
    font-size: 1rem;
    color: #737373;
    font-style: italic;
    margin-bottom: 0.75rem;
  }

  .bio {
    font-size: 1rem;
    color: #a3a3a3;
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .location {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: #525252;
    margin-bottom: 1rem;
  }

  .icon {
    width: 14px;
    height: 14px;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-links a {
    color: #525252;
    transition: color 0.15s ease;
    display: flex;
    align-items: center;
  }

  .social-links a:hover {
    color: #e5e5e5;
  }

  .social-icon {
    width: 18px;
    height: 18px;
  }

  /* Work */
  .work-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .work-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    margin: -0.75rem;
    border-radius: 8px;
    transition: background-color 0.15s ease;
  }

  .work-item:hover {
    background-color: #141414;
  }

  .work-logo {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background-color: #1a1a1a;
    padding: 6px;
    overflow: hidden;
  }

  .work-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .work-info {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    min-width: 0;
  }

  .work-company {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #e5e5e5;
  }

  .work-role {
    font-size: 0.8125rem;
    color: #737373;
  }

  .work-date {
    font-size: 0.8125rem;
    color: #525252;
    flex-shrink: 0;
  }

  /* Empty states and section links */
  .empty-state {
    font-size: 0.9375rem;
  }

  .section-link {
    display: inline-block;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: #525252;
  }

  .section-link:hover {
    color: #a3a3a3;
  }
</style>
