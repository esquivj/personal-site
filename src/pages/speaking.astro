---
import Layout from '../layouts/Layout.astro';

const pageSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Speaking - Juan Esquivel",
  "url": "https://juanesquivel.xyz/speaking",
  "description": "Podcasts, interviews, and talks by Juan Esquivel on crypto marketing, DAO governance, and brand building.",
  "author": {
    "@type": "Person",
    "name": "Juan Esquivel",
    "url": "https://juanesquivel.xyz"
  }
};
---

<Layout
  title="Speaking — Podcasts & Talks by Juan Esquivel"
  description="Podcasts, interviews, and speaking appearances by Juan Esquivel covering crypto marketing, DAO governance, brand building, and storytelling in web3."
  canonicalPath="/speaking"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>
  <nav class="nav">
    <button class="nav-toggle" aria-label="Toggle menu">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"/>
        <line x1="3" y1="12" x2="21" y2="12"/>
        <line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
    </button>
    <div class="nav-links">
      <a href="/" class="nav-link">Home</a>
      <a href="/writing" class="nav-link">Writing</a>
      <a href="/stack" class="nav-link">Stack</a>
      <a href="/speaking" class="nav-link active">Speaking</a>
      <a href="/now" class="nav-link">Now</a>
      <a href="/travels" class="nav-link">Travels</a>
      <a href="/about" class="nav-link">About</a>
    </div>
  </nav>

  <header class="page-header">
    <h1>Speaking</h1>
    <p class="subtitle">Podcasts, interviews, and talks.</p>
  </header>

  <section>
    <div class="speaking-list">
      <a href="https://youtu.be/CYTEW2VF4n8" target="_blank" rel="noopener" class="speaking-item">
        <img src="/images/dao-talk-thumbnail.jpg" alt="DAO Talk thumbnail" class="speaking-thumbnail" width="120" height="68" />
        <div class="speaking-info">
          <span class="speaking-title">Governance Solution Providers & DAO Marketing</span>
          <span class="speaking-host">DAO Talk by Tally</span>
        </div>
        <span class="speaking-arrow">↗</span>
      </a>
    </div>
  </section>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    color: #525252;
    cursor: pointer;
    padding: 0.5rem;
    margin: -0.5rem;
    transition: color 0.15s ease;
  }

  .nav-toggle:hover {
    color: #c4c4c4;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    font-size: 0.875rem;
    color: #525252;
    transition: color 0.15s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .nav-link:hover {
    color: #FF6B00;
  }

  .nav-link.active {
    color: #FF6B00;
  }

  @media (max-width: 640px) {
    .nav {
      flex-direction: column;
      align-items: flex-start;
    }

    .nav-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      padding-top: 1rem;
    }

    .nav-links.open {
      display: flex;
    }
  }

  .page-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #999999;
    font-size: 1rem;
  }

  .speaking-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .speaking-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    margin: 0 -0.75rem;
    border-radius: 8px;
    transition: background-color 0.15s ease;
  }

  .speaking-item:hover {
    background-color: #141414;
  }

  .speaking-thumbnail {
    width: 120px;
    height: 68px;
    object-fit: cover;
    border-radius: 6px;
    flex-shrink: 0;
  }

  .speaking-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    flex-grow: 1;
  }

  .speaking-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #e5e5e5;
  }

  .speaking-host {
    font-size: 0.8125rem;
    color: #999999;
  }

  .speaking-arrow {
    color: #525252;
    font-size: 0.875rem;
    margin-left: auto;
    flex-shrink: 0;
  }

  .speaking-item:hover .speaking-arrow {
    color: #c4c4c4;
  }
</style>

<script>
  const toggle = document.querySelector('.nav-toggle');
  const navLinks = document.querySelector('.nav-links');
  toggle?.addEventListener('click', () => {
    navLinks?.classList.toggle('open');
  });
</script>
